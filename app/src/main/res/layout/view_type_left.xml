<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flRootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-50dp"
    android:paddingEnd="25dp">

    <LinearLayout
        android:id="@+id/llHorizontalContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivLine"
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_marginRight="-10dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/llLessonContainer"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvCircleImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center_horizontal"
                android:foreground="@drawable/lesson_circle_background"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="60dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/ivLesson"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:scaleX="1.21"
                    android:scaleY="1.21"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/progressImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="40dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cvLessonStatus"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_marginTop="-10dp"
                app:cardBackgroundColor="#4CAF50"
                app:cardCornerRadius="11dp"
                app:cardElevation="0dp"
                android:layout_gravity="center_horizontal"
                app:contentPaddingLeft="10dp"
                app:contentPaddingRight="10dp">

                <TextView
                    android:id="@+id/tvLessonStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/montserrat_semibold"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="10sp"
                    tools:text="Готово" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tvLessonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:ellipsize="end"
                android:textSize="13sp"
                android:fontFamily="@font/montserrat_medium_new"
                android:gravity="center_horizontal"
                android:maxLines="4"
                android:textColor="@color/lesson_text_color"
                tools:text="Природное и социальное в человеке" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>